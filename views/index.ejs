<!-- Include Header -->
<%- include('partials/header'); %>
  <!-- Include Footer -->
  <!-- Jumbotron -->
  <div id="intro" class="p-5 text-center bg-light">
    <h1 class="mb-3 h2">Create Custom Text For Typing Master</h1>
    <p class="mb-3">The Best & The Easy Way</p>
    <a class="btn btn-primary m-2" href="/create" role="button" rel="nofollow">Create
      Your Own</a>
    <a class="btn btn-primary m-2" href="/download/all" target="_blank" role="button">Download All Paragraphs</a>
  </div>
  <!-- Jumbotron -->
  </header>
  <!--Main Navigation-->

  <!--Main layout-->
  <main class="my-5">
    <div class="container">
      <!--Section: Content-->
      <section class="text-center">
        <!-- <h4 class="mb-5"><strong>Latest posts</strong></h4> -->

        <div class="row">

          <% posts.forEach(post=> { %>

            <div class="col-lg-4 col-md-12 mb-4">
              <div class="card">
                <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                  <img src="https://mdbootstrap.com/img/new/standard/nature/184.jpg" class="img-fluid" />
                  <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                  </a>
                </div>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= post.title %>
                  </h5>
                  <p class="card-text">
                    ... <%- post.description.substring(20, 60); %> ...
                  </p>

                  <% var id=post._id; %>

                    <a href="/read/<%= id %>" class="btn btn-primary">Read</a>
                    <!-- <a href="/download/<%= id; %>" class="btn btn-primary">Download</a> -->
                </div>
              </div>
            </div>



            <% }) %>
        </div>


      </section>
      <!--Section: Content-->

      <!-- Pagination -->
      <nav class="my-4" aria-label="...">
        <ul class="pagination pagination-circle justify-content-center">
          <li class="page-item">
            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item active" aria-current="page">
            <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
          </li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#">Next</a>
          </li>
        </ul>
      </nav>
    </div>
  </main>
  <!--Main layout-->

  <%- include('partials/footer'); %>
